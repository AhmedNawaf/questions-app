// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum POST_TYPE {
  question
  answer
}

model users {
  id       Int               @id @default(autoincrement())
  name     String
  email    String            @unique
  password String
  posts    posts[]
  votes    post_user_votes[]
}

model posts {
  id        Int               @id @default(autoincrement())
  user      users             @relation(fields: [user_id], references: [id])
  user_id   Int
  parent    posts?            @relation("Questions", fields: [parent_id], references: [id])
  questions posts[]           @relation("Questions")
  parent_id Int?
  type      POST_TYPE
  title     String?
  content   String
  accepted  Boolean?
  tags      Int[]
  votes     post_user_votes[]

  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt
}

model post_user_votes {
  id      Int   @id @default(autoincrement())
  user    users @relation(fields: [user_id], references: [id])
  user_id Int
  post    posts @relation(fields: [post_id], references: [id])
  post_id Int

  @@unique([user_id, post_id], name: "user_id_post_id")
}

model tags {
  id          Int    @id @default(autoincrement())
  name        String
  slug        String @unique
  description String
}
